rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Profiles: Allow authenticated users to read and write their own profile data
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent programmatic deletion
    }

    // Game Data: Allow users to read and write their own game data
    match /gameData/{documentId} {
      allow read: if request.auth != null; // Any authenticated user can read game data
      allow write: if request.auth != null && request.resource.data.uid == request.auth.uid; // Users can write their own data
      allow delete: if false; // Prevent programmatic deletion
    }

    // Fallback: Restrict access to any undefined collections
    match /{collection}/{document} {
      allow read, write, delete: if false; // Block access by default
    }
  }
}
