rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Profiles: Allow authenticated users to read and write their own profile data
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent programmatic deletion
    }

    // Game Data: Allow users to read and write their own game data
    match /gameData/{documentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow delete: if false;
    }

    // Competitions: Allow anyone to read data without authentication
    match /competitions/{competitionId} {
      allow read: if true;
      allow write, delete: if false;
    }
    
    // New Competition Data: Allow authenticated users to read and write their own competition document
    match /competition1Test/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback: Block access to any undefined collections
    match /{collection}/{document} {
      allow read, write, delete: if false;
    }
  }
}
