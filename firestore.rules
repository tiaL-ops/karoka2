rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Profiles: Users can read & write only their own profile (Prevents access to others)
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent programmatic deletion
    }

    // ✅ Game Data: Each user can only access their own game data
    match /gameData/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // ✅ Competitions: Publicly readable, but no writes or deletes
    match /competitions/{competitionId} {
      allow read: if true;
      allow write, delete: if false;
    }
    
    // ✅ Each user can only read & write their own competition data
    match /competition1Test/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // ❌ Fallback: Blocks access to any undefined collections
    match /{collection}/{document} {
      allow read, write, delete: if false;
    }
  }
}
